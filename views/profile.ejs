<%- include('./partials/header') %>
<div class="wrapper">
    <body class="profileBack">
    
        <div class="container mt-5">
            <div class="row" id="profileRow">
                <div class="col-lg-12">
        
                    <h1 class="text-capitalize float-right mt-4 mb-2"><%= user.username %> <p class="glow" ><i class="fas fa-user-check"></i> verified</p> </h1>
                    
                    <br><br><br><br><br>
        <hr class="style-five">
                </div>
        
                <div class="col-lg-12">
                    <h2><i class="fas fa-pen-nib"></i> <%= user.username %>'s blogs: </h2>

                    <% blogs.forEach(function(blog){ %>
                        <div class="card" id="cardProfile">
                            <h2 class="card-title mt-5 ml-4"><%= blog.name %></h2>
                            <h6 class="ml-5"><i class="far fa-calendar-alt"></i> <%= blog.created.toDateString() %></h6>
                            <img src="../uploads/<%= blog.file %>"  class="img-thumbnail rounded mx-auto mt-3 d-block" alt="">
                            <div class="card-body">
                             
                              <p id="quoteShow" class="mb-0"><i class="fas fa-quote-left"></i> <%- blog.quote %> <i class="fas fa-quote-right"></i></p>
                              <p id="quoteauthorShow"><i class="fas fa-angle-double-right"></i> <em><%- blog.quoteauthor %></em></p>
                              <h3 class="mt-4 text-uppercase"><%- blog.subname1 %> </h3>
                              <p class="card-text blogText text-justify" style="color: black;"><%- blog.description.substring(0,400) %>...........</p>
                            
                              <a href="/blogs/<%= blog.id %>" class="btn btn-outline-primary btn-lg"><i class="fas fa-book-open"></i> Read Full article</a>
                            </div>
                          </div>
                       <br>
        
                   <% }) %> 
        
        
                </div>
            </div>
        </div>
    
    </body>

    
   
</div>

<%- include('./partials/footer') %> 